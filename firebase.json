{
  "hosting": {
    "site": "zoom-app-dev",
    "public": "dist/zoom-media-angular/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/videos",     "function": { "functionId": "api", "region": "us-central1" } },
      { "source": "/videos/**",  "function": { "functionId": "api", "region": "us-central1" } },
      { "source": "/recall",     "function": { "functionId": "api", "region": "us-central1" } },
      { "source": "/recall/**",  "function": { "functionId": "api", "region": "us-central1" } },
      { "source": "/health",     "function": { "functionId": "api", "region": "us-central1" } },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
